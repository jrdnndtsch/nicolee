<p id="notice"><%= notice %></p>

<h1>Listing Translations</h1>
<% @translations.each do |translation| %>
  <div class="translation">
    <%= translation.title %>
    <%= translation.author %>
    <%= translation.publisher %>
    <%= translation.date %>
    <%= translation.link %>
    <%= link_to 'Show', translation %>
  <% if user_signed_in? %>    
    <%= link_to 'Edit', edit_translation_path(translation) %>
    <%= link_to 'Destroy', translation, method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>  
  </div>
<% end %>

<% if user_signed_in? %>
  <%= link_to 'New Translation', new_translation_path %>
<% end %>
