<!DOCTYPE html>
<html>
<head>
  <title>Nicolee</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:body_class]%>">
<% if user_signed_in? %>
  Logged in as <strong><%= current_user.email %></strong>.
  <%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |
  <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
<% end %>
<% if controller_name == 'sessions'%>

<%else%>
	<nav class="<% if params[:body_class].present?%><%= params[:body_class]%> <% else %>default<% end %>">
		<h1><%= link_to 'Nicolee', '/'%></h1><!--
		*--><ul>
			<li><%= link_to 'Translations', translations_path %></li><!--
			*--><li><%= link_to 'About', about_nicolees_path %></li><!--
			*--><li><%= link_to 'Contact', contacts_path %></li><!--
			*--><li><%= link_to 'Blog', posts_path %></li>
		</ul>
	</nav>
<%end%>	
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>	
<%= yield %>

</body>
</html>
