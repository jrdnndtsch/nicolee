<p id="notice"><%= notice %></p>

<h1>Listing About Nicolees</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @about_nicolees.each do |about_nicolee| %>
      <tr>
        <td><%= about_nicolee.description %></td>
        <td><%= about_nicolee.photo %></td>
        <td><%= link_to 'Show', about_nicolee %></td>
        <td><%= link_to 'Edit', edit_about_nicolee_path(about_nicolee) %></td>
        <td><%= link_to 'Destroy', about_nicolee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'New About nicolee', new_about_nicolee_path %>
<% end %>
